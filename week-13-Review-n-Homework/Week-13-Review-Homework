            </p>
            <p style="margin-top: 15px; font-style: italic; color: #999;">
                Questions? Remember: the goal is to learn from God's Word, not to be an expert. We're all growing together.
            </p>
        </div>
    </div>

    <script>
        // Auto-save functionality using localStorage
        const weekTopics = {
            1: "Are You Really a Christian?",
            2: "The Necessity of New Birth",
            3: "Saving Faith - Part 1",
            4: "Saving Faith - Part 2",
            5: "Repentance - Turning from Sin to God",
            6: "Following Jesus - What It Really Means",
            7: "Lordship of Christ",
            8: "The Gospel vs. Cultural Christianity",
            9: "The Narrow Gate - Part 1",
            10: "The Narrow Gate - Part 2",
            11: "Sanctification - Growing in Grace",
            12: "Biblical Accountability vs. Being Judgmental"
        };

        // Load saved names on page load
        document.querySelectorAll('.name-input').forEach(input => {
            const weekNum = input.getAttribute('data-week');
            const savedName = localStorage.getItem('assignedName_week' + weekNum);
            if (savedName) {
                input.value = savedName;
            }
            
            // Save name when changed
            input.addEventListener('input', function() {
                localStorage.setItem('assignedName_week' + weekNum, this.value);
            });
        });

        // Handle checkbox activation
        document.querySelectorAll('.activate-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const weekNum = this.id.replace('check-week', '');
                const notesSection = document.getElementById('notes-week' + weekNum);
                const weekCard = this.closest('.week-card');
                
                if (this.checked) {
                    notesSection.classList.add('active');
                    weekCard.classList.add('active');
                    loadNotes(weekNum);
                    // Scroll to notes section
                    setTimeout(() => {
                        notesSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }, 100);
                } else {
                    notesSection.classList.remove('active');
                    weekCard.classList.remove('active');
                }
            });
        });

        // Auto-save notes as user types
        document.querySelectorAll('textarea').forEach(textarea => {
            textarea.addEventListener('input', function() {
                const weekNum = this.id.split('-')[1];
                saveNotes(weekNum);
            });
        });

        function saveNotes(weekNum) {
            const data = {
                main: document.getElementById('main-' + weekNum).value,
                q1: document.getElementById('q1-' + weekNum).value,
                q2: document.getElementById('q2-' + weekNum).value,
                q3: document.getElementById('q3-' + weekNum).value,
                q4: document.getElementById('q4-' + weekNum).value,
                verse1: document.getElementById('verse1-' + weekNum).value,
                verse2: document.getElementById('verse2-' + weekNum).value,
                app: document.getElementById('app-' + weekNum).value,
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('week' + weekNum + '_notes', JSON.stringify(data));
            showStatus(weekNum, 'Notes auto-saved ✓', 'success');
        }

        function loadNotes(weekNum) {
            const saved = localStorage.getItem('week' + weekNum + '_notes');
            if (saved) {
                const data = JSON.parse(saved);
                document.getElementById('main-' + weekNum).value = data.main || '';
                document.getElementById('q1-' + weekNum).value = data.q1 || '';
                document.getElementById('q2-' + weekNum).value = data.q2 || '';
                document.getElementById('q3-' + weekNum).value = data.q3 || '';
                document.getElementById('q4-' + weekNum).value = data.q4 || '';
                document.getElementById('verse1-' + weekNum).value = data.verse1 || '';
                document.getElementById('verse2-' + weekNum).value = data.verse2 || '';
                document.getElementById('app-' + weekNum).value = data.app || '';
                showStatus(weekNum, 'Previous notes loaded ✓', 'info');
            }
        }

        function showStatus(weekNum, message, type) {
            const status = document.getElementById('status-' + weekNum);
            status.textContent = message;
            status.className = 'save-status ' + type;
            status.style.display = 'block';
            setTimeout(() => {
                status.style.display = 'none';
            }, 3000);
        }

        function emailNotes(weekNum) {
            const data = {
                main: document.getElementById('main-' + weekNum).value,
                q1: document.getElementById('q1-' + weekNum).value,
                q2: document.getElementById('q2-' + weekNum).value,
                q3: document.getElementById('q3-' + weekNum).value,
                q4: document.getElementById('q4-' + weekNum).value,
                verse1: document.getElementById('verse1-' + weekNum).value,
                verse2: document.getElementById('verse2-' + weekNum).value,
                app: document.getElementById('app-' + weekNum).value
            };

            const subject = `Bible Study Notes - Week ${weekNum}: ${weekTopics[weekNum]}`;
            const body = `BIBLE STUDY NOTES\nWeek ${weekNum}: ${weekTopics[weekNum]}\n\n` +
                `MAIN IDEA:\n${data.main}\n\n` +
                `QUESTION 1:\n${data.q1}\n\n` +
                `QUESTION 2:\n${data.q2}\n\n` +
                `QUESTION 3:\n${data.q3}\n\n` +
                `QUESTION 4:\n${data.q4}\n\n` +
                `SUPPORTING SCRIPTURE #1:\n${data.verse1}\n\n` +
                `SUPPORTING SCRIPTURE #2:\n${data.verse2}\n\n` +
                `PERSONAL APPLICATION:\n${data.app}\n\n` +
                `---\nSaved: ${new Date().toLocaleString()}`;

            const mailtoLink = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = mailtoLink;
            
            showStatus(weekNum, 'Opening your email app... Send to yourself!', 'success');
        }

        function downloadNotes(weekNum) {
            const data = {
                main: document.getElementById('main-' + weekNum).value,
                q1: document.getElementById('q1-' + weekNum).value,
                q2: document.getElementById('q2-' + weekNum).value,
                q3: document.getElementById('q3-' + weekNum).value,
                q4: document.getElementById('q4-' + weekNum).value,
                verse1: document.getElementById('verse1-' + weekNum).value,
                verse2: document.getElementById('verse2-' + weekNum).value,
                app: document.getElementById('app-' + weekNum).value
            };

            const content = `BIBLE STUDY NOTES\nWeek ${weekNum}: ${weekTopics[weekNum]}\n\n` +
                `MAIN IDEA:\n${data.main}\n\n` +
                `QUESTION 1:\n${data.q1}\n\n` +
                `QUESTION 2:\n${data.q2}\n\n` +
                `QUESTION 3:\n${data.q3}\n\n` +
                `QUESTION 4:\n${data.q4}\n\n` +
                `SUPPORTING SCRIPTURE #1:\n${data.verse1}\n\n` +
                `SUPPORTING SCRIPTURE #2:\n${data.verse2}\n\n` +
                `PERSONAL APPLICATION:\n${data.app}\n\n` +
                `---\nSaved: ${new Date().toLocaleString()}`;

            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `Week_${weekNum}_Notes.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showStatus(weekNum, 'Downloaded! Check your Downloads folder.', 'success');
        }

        function clearNotes(weekNum) {
            if (confirm('Are you sure you want to clear all notes for this week? This cannot be undone.')) {
                document.getElementById('main-' + weekNum).value = '';
                document.getElementById('q1-' + weekNum).value = '';
                document.getElementById('q2-' + weekNum).value = '';
                document.getElementById('q3-' + weekNum).value = '';
                document.getElementById('q4-' + weekNum).value = '';
                document.getElementById('verse1-' + weekNum).value = '';
                document.getElementById('verse2-' + weekNum).value = '';
                document.getElementById('app-' + weekNum).value = '';
                localStorage.removeItem('week' + weekNum + '_notes');
                showStatus(weekNum, 'Notes cleared', 'info');
            }
        }
    </script>
</body>
</html>
